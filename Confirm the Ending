
function confirmEnding(str, target) {
  // "Never give up and good luck will find you."
   var len = str.length;
 var tar = target.length;
 var diff = len - tar;
 var word = str.slice(diff);

  if (word == target){
    return true;
  }
  else
  {
    return false;
  }
  
}

confirmEnding("Bastian", "n");
